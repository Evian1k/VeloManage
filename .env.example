# AutoCare Pro Environment Variables
# Copy this file to .env and fill in your actual values

# Application Settings
VITE_APP_NAME=AutoCare Pro
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development

# API Configuration (for future backend integration)
VITE_API_BASE_URL=http://localhost:3001/api
VITE_API_TIMEOUT=10000

# Authentication (for future implementation)
VITE_JWT_SECRET=your-super-secret-jwt-key-here
VITE_JWT_EXPIRES_IN=7d

# Database (for future backend)
DATABASE_URL=mongodb://localhost:27017/autocare
# or for PostgreSQL: postgresql://username:password@localhost:5432/autocare

# Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@autocare.com

# SMS Service (for notifications)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Integration (for future features)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# File Upload (for vehicle photos)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Analytics (optional)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Error Tracking (optional)
SENTRY_DSN=https://your-sentry-dsn

# Development Tools
VITE_DEV_TOOLS=true
VITE_MOCK_API=true